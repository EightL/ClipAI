{
  "name": "clipai",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "EightL",
  "main": "main.js",
  "description": "Instant AI popup that summarizes & explains selected text system-wide with multi-provider LLMs, themes, and rich Markdown rendering.",
  "repository": { "type": "git", "url": "https://github.com/EightL/ClipAI.git" },
  "bugs": { "url": "https://github.com/EightL/ClipAI/issues" },
  "homepage": "https://github.com/EightL/ClipAI#readme",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder -mwl",
    "package:mac": "electron-packager . ClipAi --platform=darwin --arch=arm64 --overwrite --prune=true",
    "dist": "electron-builder --mac",
  "dist:win": "electron-builder --win --publish=never"
  },
  "devDependencies": {
    "electron": "29.3.0",
    "electron-builder": "24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourdomain.clipai",
    "productName": "ClipAI",
    "asar": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "index.html",
      "settings.html",
      "preload.js",
      "config.example.json",
      "README.md",
      "LICENSE",
      "icons/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns"
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] },
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
