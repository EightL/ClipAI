{
  "name": "clipai-popup",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder -mwl",
    "package:mac": "electron-packager . ClipAI --platform=darwin --arch=arm64 --overwrite --prune=true",
    "dist": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "29.3.0",
    "electron-builder": "24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourdomain.clipai",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
  "config.example.json",
  "icons/**"
    ],
    "mac": {
  "category": "public.app-category.productivity",
  "icon": "icons/icon.icns"
    },
    "win": {
  "target": "nsis",
  "icon": "icons/icon.ico"
    }
  }
}
