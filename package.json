{
  "name": "clipai",
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "author": "EightL",
  "main": "src/main.js",
  "description": "Instant AI popup that summarizes & explains selected text system-wide with multi-provider LLMs, themes, and rich Markdown rendering.",
  "repository": { "type": "git", "url": "https://github.com/EightL/ClipAI.git" },
  "bugs": { "url": "https://github.com/EightL/ClipAI/issues" },
  "homepage": "https://github.com/EightL/ClipAI#readme",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder -mwl",
    "package:mac": "electron-packager . ClipAi --platform=darwin --arch=arm64 --overwrite --prune=true",
    "dist": "electron-builder --mac --publish=never",
  "dist:win": "electron-builder --win --publish=never"
  },
  "devDependencies": {
    "electron": "29.3.0",
    "electron-builder": "24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.eightl.clipai",
    "productName": "ClipAI",
    "asar": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
  "src/main.js",
  "src/index.html",
  "src/settings.html",
  "src/preload.js",
      "README.md",
      "LICENSE",
      "icons/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns",
      "identity": null,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "provisioningProfile": null,
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "publisherName": ["EightL"],
      "signingHashAlgorithms": ["sha256"],
      "rfc3161TimeStampServer": "http://timestamp.sectigo.com",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "createStartMenuShortcut": true,
      "menuCategory": "Productivity"
    }
  }
}
